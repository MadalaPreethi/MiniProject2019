<h3>{{viewTitle}}</h3>
<style>
    label{
        color: aliceblue
    }
    h3{
        color: rosybrown
    }
    form{
        margin-left: 200px;
        margin-right: 200px;
        width: 400px;
    }
</style>
<!--Checking login -->
<form autocomplete="off" action="/insert" method="POST">
<div class="form-group">
    <label>Full Name : </label>
    <input type="text" name="lfn" placeholder="Enter your full name" class="form-control">
</div>
<div class="form-group">
    <label>Email : </label>
    <input type="text" name="lemail" placeholder="Enter your email" class="form-control">
</div>
<div class="form-group">
    <label>Password : </label>
    <input type="password" name="lpass" placeholder="Enter password" class="form-control">
</div>
<div class="form-group">
    <button class="btn btn-warning" type="submit">Login <i class="fa fa-sign-in " ></i></button>
</div>
</form>